<%= render 'articles_navbar' %>
<div class="container">
  <h2 class="text-uppercase">Create a New Article</h2>
  <p>Define the Title and Content of the Article to be added</p>
</div>
<div class="container">
  <div class="form-group">
    <%= form_with model: @article do |f| %>
      <div class="form-group row py-3">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group row py-3">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control bg-warning" %>
      </div>
      <div class="form-group row py-3">
        <%= f.label :rating %>
        <%= f.number_field :rating, in: 1.0..5.0, step: 1, class: "w-25" %>
      </div>
      <%= f.submit class: "btn btn-default btn-primary" %>
    <% end %>
  </div>
</div>
