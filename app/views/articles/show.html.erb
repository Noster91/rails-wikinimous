<%= render 'articles_navbar' %>
<div class="container">
  <div class="d-flex justify-content-left align-items-center">
    <h2 class="text-uppercase py-3 m-0">Article: <%= @article.title %></h2>
    <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_article_path, :class => "btn btn-primary m-3" %>
    <%= link_to '<i class="fa fa-trash"></i>'.html_safe, article_path(@article),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn btn-danger m-3" %>
  </div>
  <div>
    <p>
      Rating: <%= '<i class="fa-solid fa-star" ></i>'.html_safe * @article.rating.to_i %>
    </p>
    <h3 class="mt-3">Content of the article</h3>
    <p class="mt-3"><%= @article.content %></p>
    <div class="d-flex justify-content-left align-items-center">
      <%= link_to 'Back To Glossary', articles_path, :class => "btn btn-primary m-2" %>
    </div>
  </div>
</div>
